<body><
    <div class="container">
        <div class="jumbotron text-center">
            <h1>Eat Da Burger!</h1>
        </div>
    <div class="row justify-content-center mb-4">
        <div class="col-sm-4 text-center">
            <div class="card">
                <div class="card-header">
                    <h2>Burgers</h2>
                </div>
                <ul class="card-body">
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    {{> burgers/burger-block devoured=false}}
                    <li class="list-group-item">
                        {{burger_name}} <button data-id="{{id}}" class="btn devour">Devour the burger!</button>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2>Devoured Burgers</h2>
                </div>
                <ul class="card-body">
                    {{#each burgers}}
                    {{#if this.devoured}}
                    {{> burgers/burger-block=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mb-4">
        <div class="col-sm-4 text-center">
            <h2>Add a Burger</h2>
            <form id="create-form">

            <div class="form-group">
                <label for="bur">Burger Name:</label>
                <input type="text" id="bur" name="name">

            <button class="btn add" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</body>
<script type="text/javascript" src="public/assets/js/index.js"></script>
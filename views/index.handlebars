    <div class="jumbotron bg-light jumbotron-fluid text-center">
        <h1>Eat Da Burger!</h1>
    </div>
    <div class="row justify-content-center">
    {{!-- <div class="col-sm-4 text-center"> --}}
        <div class="card">
            <div class="card-header">
                <h2>Burgers</h2>
            </div>
            <div class="card-body">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="card">
            <div class="card-header text-center">
                <h2>Devoured Burgers</h2>
            </div>
            <div class="card-body">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </div>
        </div>
    {{!-- </div> --}}
    </div>

    <div class="row justify-content-center">
    <div class="card">
        <div class="card-header">
            <h2>Add a Burger</h2>
        </div>
        <div>
            <form id="create-form">

            <div class="form-group">
                <label for="bur">Burger Name:</label>
                <input type="text" id="bur" name="name">

            <button class="btn btn-dark add" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
    </div>
